.page.landingPage
    width: 100%
    max-width: 100%
    padding: 0

    .pageSegment
        max-width: body-max-width + 2*side-padding
        margin: 0 auto
        padding: 0 10px

.landingBenefits

    .tryIt
        margin-top: -30px
        text-align: center
        font-style: font-header
        font-weight: 400
        line-height: 1.2

        i
            svg 
                font-size: 15px

    .benefitsTitle
        margin: 70px 0 40px 0
        text-align: center

        // @media mq-mobile
        //     display: none

        h1
            font-size: 40px
            margin: 0 0 10px 0

            @media mq-mobile
                font-size: 35px

            strong
                font-size: 40px
                color: color-primary

        h2
            margin: 0
            font-size: 25px
            color: #aaa

    .benefitsList
        max-width: 400px
        margin: 0 auto

        h2
            padding-left: 120px
            font-size: 25px

        p
            padding-left: 100px
            font-size: 23px

        ul
            padding-left: 0

        li
            //font-family: font-header
            //font-size: 25px
            //font-weight: 400
            font-size: 23px
            list-style: none
            margin-left: 0
            margin-bottom: 15px

            .anticon
                color: color-primary
                margin-right: 10px
                vertical-align: -0.375em

                svg
                    font-size: 29px

    .benefits
        display: flex
        flex-direction: row
        flex-wrap: wrap

        @media mq-mobile
            margin-top: 50px

        .benefit
            flex: 1 1 auto
            width: 300px
            margin: 0 20px 60px 20px
            text-align: center

            h2
                margin: 25px 0 20px 0

.benefitIcon
    i
        svg 
            color: color-primary
            font-size: 40px
