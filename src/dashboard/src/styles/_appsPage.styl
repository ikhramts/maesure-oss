.appsPage
    .downloadsRow
        margin-top: 40px
        margin-bottom: 40px

    .downloadButton
        position: relative
        display: inline-block
        padding: 9px 15px
        margin-right: 30px
        border-radius: 5px
        color: white
        font-family: font-header
        font-size: 17px
        font-weight: 600
        
        &.windows
            background: color-green-bg

        &.mac
            background: #262626

        &.notYet
            cursor: not-allowed

        .winLogo
            position: relative
            top: -2px
            width: 20px
            height: 20px
            margin-left: 15px

        .macLogo
            position: relative
            top: -3px
            width: 20px
            height: 20px
            margin-left: 15px
